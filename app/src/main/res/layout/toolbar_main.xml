<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_buttons"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="?android:attr/actionBarSize"
    android:layout_gravity="end"
    android:gravity="center_vertical"
    tools:showIn="@layout/activity_main"
    android:divider="@drawable/shape_divider_large_horizontal"
    android:showDividers="beginning|middle|end">

    <RadioButton
        android:id="@+id/radio_button_station_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/selector_toolbar_station_list"
        android:background="?attr/selectableItemBackgroundBorderless"
        tools:button="@drawable/ic_toolbar_station_list_selected"
        tools:checked="true" />

    <RadioButton
        android:id="@+id/radio_button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/selector_toolbar_music"
        android:background="?attr/selectableItemBackgroundBorderless"
        tools:button="@drawable/ic_toolbar_music" />

    <!--<RadioButton-->
        <!--android:id="@+id/radio_button_browse"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:button="@drawable/splash"-->
        <!--android:background="?attr/selectableItemBackgroundBorderless"-->
        <!--tools:button="@drawable/splash" />-->

    <RadioButton
        android:id="@+id/radio_button_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/selector_toolbar_settings"
        android:background="?attr/selectableItemBackgroundBorderless"
        tools:button="@drawable/ic_toolbar_settings" />

</RadioGroup>